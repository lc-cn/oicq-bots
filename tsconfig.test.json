{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "oitq": [
        "packages/oitq/src"
      ],
      "@oitq/plugin-*": [
        "plugins/*/src",
        "plugins/**/*/src"
      ],
      "@oitq/service-*": [
        "services/*/src",
      ],
      "@oitq/adapter-*": [
        "adapters/*/src",
      ],
      "@oitq/*": [
        "packages/*/src"
      ]
    }
  }
}
