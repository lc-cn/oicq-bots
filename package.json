{
  "name": "oitq-worksapce",
  "private": true,
  "version": "0.0.1",
  "description": "oitq",
  "bin": "packages/cli",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "build": "npm run build -workspaces",
    "dev": "npm run build -w @oitq/utis -w @oitq/loader -w @oitq/core -w oitq -w @oitq/cli && npm run dev -w test",
    "start": "npm start -w test",
    "pub": "npm run pub -workspaces",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "workspaces": [
    "packages/*",
    "plugins/*",
    "test",
    "docs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oitq/oitq.git"
  },
  "keywords": [
    "oicq",
    "bot",
    "bots"
  ],
  "author": "凉菜",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oitq/oitq/issues"
  },
  "homepage": "https://github.com/oitq/oitq#readme",
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@types/prompts": "^2.0.14",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "vuepress": "^1.9.7"
  },
  "dependencies": {
    "@lc-cn/command": "^0.1.7",
    "oicq": "^2.2.1"
  }
}
