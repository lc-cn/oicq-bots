{
  "name": "oitq-workspace",
  "version": "1.0.0",
  "description": "oitq-v3",
  "scripts": {
    "start": "node .",
    "compile": "ts-node ./build/compile.ts",
    "dtsc": "ts-node ./build/dtsc.ts",
    "build": "npm run compile && npm run  dtsc",
    "dev": "npm run dev --workspace test",
    "pub": "ts-node ./build/publish.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oitq/oitq.git"
  },
  "keywords": [
    "ts",
    "dev",
    "template"
  ],
  "author": "凉菜",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oitq/oitq/issues"
  },
  "homepage": "https://github.com/oitq/oitq#readme",
  "devDependencies": {
    "@types/node": "latest",
    "dtsc": "^1.1.0",
    "esbuild": "^0.14.47",
    "esbuild-register": "^3.3.3",
    "fs-extra": "^10.1.0",
    "kleur": "^4.1.4",
    "latest-version": "5.1.0",
    "semver": "^7.3.7",
    "ts-node-dev": "latest",
    "tsc-alias": "latest",
    "tsconfig-paths": "latest",
    "typescript": "latest"
  },
  "workspaces": [
    "packages/*",
    "adapters/*",
    "plugins/*",
    "services/*",
    "test"
  ],
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "/lib/**/LICENSE"
  ],
  "dependencies": {
    "cac": "^6.7.12"
  }
}
